<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.activity.EditAddressActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="编辑地址"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/address_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical|center"
            android:text="保存"
            android:textColor="@color/white" />
    </android.support.v7.widget.Toolbar>

    <View style="@style/line_max_vertical"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="收件人" />

            <View
                style="@style/line_horizontal"
                android:background="@color/cardview_shadow_end_color" />

            <com.gfso.client.oauthclientapplication.fragment.widget.MyEditText
                android:id="@+id/consignee_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:enabled="true"
                android:hint="请输入收件人姓名"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            style="@style/line_vertical"
            android:background="@color/cardview_shadow_end_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="联系电话" />

            <View
                style="@style/line_horizontal"
                android:background="@color/cardview_shadow_end_color" />

            <com.gfso.client.oauthclientapplication.fragment.widget.MyEditText
                android:id="@+id/consignee_phone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:enabled="true"
                android:hint="请输入收件人电话"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/line_vertical"
            android:background="@color/cardview_shadow_end_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/select_consigneeAdr"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:gravity="center_vertical|left"
                android:text="邮编" />

            <View
                style="@style/line_horizontal"
                android:background="@color/cardview_shadow_end_color" />

            <com.gfso.client.oauthclientapplication.fragment.widget.MyEditText
                android:id="@+id/consignee_zipcode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:enabled="true"
                android:hint="请输入收件人邮编"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/line_vertical"
            android:background="@color/cardview_shadow_end_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="详细地址" />

            <View
                style="@style/line_horizontal"
                android:background="@color/cardview_shadow_end_color" />

            <com.gfso.client.oauthclientapplication.fragment.widget.MyEditText
                android:id="@+id/consignee_address"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:enabled="true"
                android:hint="请填写收件人详细地址"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>